<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="32dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/tvStatusLeitura"
        android:text="Pressione o gatilho para ler"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvContadorTags"
        android:text="Total de tags lidas: 0"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        android:backgroundTint="@android:color/white">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTagsLidas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNenhumaTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nenhuma etiqueta lida ainda"
        android:textColor="@android:color/darker_gray"
        android:visibility="gone"
        android:layout_marginTop="8dp"/>
</LinearLayout>
